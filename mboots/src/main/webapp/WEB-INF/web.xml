<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
	
	<listener>
        <listener-class>
           com.mboots.com.init.ExcBeforeSpring
        </listener-class>
    </listener> 
    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>classpath:log4j.xml</param-value>
    </context-param> 
      <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <param-value>3000</param-value>
  </context-param>
  <listener>
    <listener-class>
			org.springframework.web.util.Log4jConfigListener
	</listener-class>
  </listener>
    <!-- spring -->
    <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	<listener> 
	     <listener-class>
            com.mboots.com.init.SingleContextListener
        </listener-class>
	</listener>
	
	<!-- filters -->
	<filter>
    <filter-name>encoding</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
  	 <filter-name>encoding</filter-name>
  	 <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>loginfilter</filter-name>
    <filter-class>com.mboots.com.filter.LoginFilter</filter-class>
    <init-param>  
	<param-name>exclude</param-name>  
	<param-value>*.html|*.js|*.css|*.png|*.jpg|*.gif|*.md|*.xml|/static/*|/vcode/?|/validation/?|/nlogin/*</param-value>  
	</init-param>  
  </filter>
  <filter-mapping>
    <filter-name>loginfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>htmlFilter</filter-name>
    <filter-class>com.mboots.com.filter.HtmlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>htmlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  	<filter>
　 		<filter-name>HiddenHttpMethodFilter</filter-name>
 		<filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
	</filter> 
  <servlet>
    <servlet-name>restful</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:/springmvc/restful.xml</param-value>
    </init-param>
  </servlet>
  <filter-mapping>
	　 <filter-name>HiddenHttpMethodFilter</filter-name>
	　 <servlet-name>restful</servlet-name>
　 </filter-mapping>
  <servlet-mapping>
  	 <servlet-name>restful</servlet-name>
    <url-pattern>/restful/*</url-pattern>
  </servlet-mapping>
  
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/error/403.html</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/error/400.html</location>
  </error-page>
  <error-page>
    <error-code>410</error-code>
    <location>/WEB-INF/error/410.html</location>
  </error-page>
  <error-page>
    <error-code>411</error-code>
    <location>/WEB-INF/error/411.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/WEB-INF/error/405.html</location>
  </error-page>
  <error-page>
    <error-code>502</error-code>
    <location>/WEB-INF/error/502.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/error/500.html</location>
  </error-page>
  <mime-mapping>
    <extension>rar</extension>
    <mime-type>application/zip</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>doc</extension>
    <mime-type>application/zip</mime-type>
  </mime-mapping>
</web-app>
